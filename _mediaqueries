/*Material design breakpoints */
$xsmall:    480px;
$small:     840px;
$medium:    1280px;
$large:     1600px;
$xlarge:    1920px;


@mixin breakpoint($point) {
    @if $point == xsmall {
        @media all and (min-width: 0) and (max-width: $xsmall) {
            @content;
        }
    }
    @else if $point == small {
        @media all and (min-width: $xsmall + 1px) and (max-width: $small) {
            @content;
        }
    }
    @else if $point == medium {
        @media all and (min-width: $small + 1px) and (max-width: $medium) {
            @content;
        }
    }
    @else if $point == large {
        @media all and (min-width: $medium + 1px) and (max-width: $large) {
            @content;
        }
    }
    @else if $point == xlarge {
        @media all and (min-width: $large + 1px) and (max-width: $xlarge) {
            @content;
        }
    }
}

div{
    width: 100%;
    height: 280px;
}

.background {
    background-color: aqua;

    @include breakpoint(xsmall) {
        background-color: blue;
    }

    @include breakpoint(small) {
        background-color: yellow;
    }

    @include breakpoint(medium) {
        background-color: red;
    }

    @include breakpoint(large) {
        background-color: green;
    }

    @include breakpoint(xlarge) {
        background-color: darkmagenta;
    }
}
